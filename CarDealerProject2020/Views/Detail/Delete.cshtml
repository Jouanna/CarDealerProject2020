@model DetailEditViewModel

@{
    ViewData["Title"] = "Изтрий";
}

<h1>@ViewData["Title"]</h1>

<head>
    <style>
        body {
            background-color: MintCream;
        }
    </style>
</head>

<p>Номер - @Model.Id</p>
<p>Тип - @Model.Type</p>
<p>Марка - @Model.BrandName</p>
<p>Модел - @Model.Type</p>
<p>Година - @Model.Year</p>
<p>Гориво - @Model.Fuel</p>
<p>Мощност - @Model.HorsePower</p>
<p>Цвят - @Model.Color</p>
<p>Цена - @Model.Price</p>
<p>Име на магазин - @Model.StoreName</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий напълно" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-success">Назад</a>
</form>




