@model VehicleEditViewModel

@{
    ViewData["Title"] = "Изтрий";
}

<h1>@ViewData["Title"]</h1>

<head>
    <style>
        body {
            background-color: MintCream;
        }
    </style>
</head>

<p>Номер - @Model.Id</p>
<p>Марка - @Model.BrandName</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий напълно" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-success">Назад</a>
</form>




