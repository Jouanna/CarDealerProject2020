@model IEnumerable<DealAllViewModel>

@{
    ViewData["Title"] = "Сключени сделки";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Create">Добави</a>

<head>
    <style>
        body {
            background-color: MintCream;
        }
    </style>
</head>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Номер
            </th>
            <th>
                Продавач
            </th>
            <th>
                Купувач
            </th>
            <th>
                Автомобил
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.SellerId - @item.Name
            </td>
            <td>
                @item.BuyerId - @item.FirstName @item.LastName
            </td>
            <td>
                @item.BrandName @item.Model
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Към изтрий</a>
            </td>
        </tr>

        }
    </tbody>

</table>