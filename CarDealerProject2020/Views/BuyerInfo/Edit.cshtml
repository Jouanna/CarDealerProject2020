@model BuyerInfoEditViewModel

@{
    ViewData["Title"] = "Редактирай";
}

<h1>@ViewData["Title"]</h1>

<head>
    <style>
        body {
            background-color: MintCream;
        }
    </style>
</head>

<form asp-action="Edit" asp-controller="BuyerInfo" method="post">
    <label asp-for="FirstName" class="alert-warning">Първо име</label>
    <input asp-for="FirstName" class="alert-info" />
    <span asp-validation-for="FirstName" class="text-danger"></span><br />

    <label asp-for="MiddleName" class="alert-warning">Презиме</label>
    <input asp-for="MiddleName" class="alert-info" />
    <span asp-validation-for="MiddleName" class="text-danger"></span><br />

    <label asp-for="LastName" class="alert-warning">Фамилия</label>
    <input asp-for="LastName" class="alert-info" />
    <span asp-validation-for="LastName" class="text-danger"></span><br />

    <label asp-for="City" class="alert-warning">Град</label>
    <input asp-for="City" class="alert-info" />
    <span asp-validation-for="City" class="text-danger"></span><br />

    <label asp-for="Address" class="alert-warning">Адрес</label>
    <input asp-for="Address" class="alert-info" />
    <span asp-validation-for="Address" class="text-danger"></span><br />

    <label asp-for="Phone" class="alert-warning">Телефон</label>
    <input asp-for="Phone" class="alert-info" />
    <span asp-validation-for="Phone" class="text-danger"></span><br />

    <label asp-for="DriverLicenseNumber" class="alert-warning">Шофьорска книжка</label>
    <input asp-for="DriverLicenseNumber" class="alert-info" />
    <span asp-validation-for="DriverLicenseNumber" class="text-danger"></span><br />

    <input type="submit" value="Запази" class="btn btn-outline-success" />
    <a asp-action="Index" class="btn btn-success">Назад</a>

</form>
